<% content_for(:title) { t('errors.unprocessable.title') } %>

<div class="error-page">
  <div class="error-icon error-icon--warning">
    <svg width="120" height="120" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
      <circle cx="12" cy="12" r="10"/>
      <line x1="12" y1="8" x2="12" y2="12"/>
      <line x1="12" y1="16" x2="12.01" y2="16"/>
    </svg>
  </div>

  <h1 class="error-code">422</h1>
  <h2 class="error-title"><%= t('errors.unprocessable.title') %></h2>
  <p class="error-message"><%= t('errors.unprocessable.message') %></p>

  <div class="error-actions">
    <%= link_to t('errors.back_home'), root_path, class: "btn btn-primary" %>
  </div>
</div>
