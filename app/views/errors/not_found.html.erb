<% content_for(:title) { t('errors.not_found.title') } %>

<div class="error-page">
  <div class="error-icon">
    <svg width="120" height="120" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
      <circle cx="12" cy="12" r="10"/>
      <path d="M16 16s-1.5-2-4-2-4 2-4 2"/>
      <line x1="9" y1="9" x2="9.01" y2="9"/>
      <line x1="15" y1="9" x2="15.01" y2="9"/>
    </svg>
  </div>

  <h1 class="error-code">404</h1>
  <h2 class="error-title"><%= t('errors.not_found.title') %></h2>
  <p class="error-message"><%= t('errors.not_found.message') %></p>

  <div class="error-actions">
    <%= link_to t('errors.back_home'), root_path, class: "btn btn-primary" %>
    <%= link_to t('misc.all_provinces'), provinces_path, class: "btn btn-secondary" %>
  </div>
</div>
