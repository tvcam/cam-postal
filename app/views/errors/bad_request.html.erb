<% content_for(:title) { t('errors.bad_request.title') } %>

<div class="error-page">
  <div class="error-icon error-icon--warning">
    <svg width="120" height="120" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
      <circle cx="12" cy="12" r="10"/>
      <line x1="15" y1="9" x2="9" y2="15"/>
      <line x1="9" y1="9" x2="15" y2="15"/>
    </svg>
  </div>

  <h1 class="error-code">400</h1>
  <h2 class="error-title"><%= t('errors.bad_request.title') %></h2>
  <p class="error-message"><%= t('errors.bad_request.message') %></p>

  <div class="error-actions">
    <%= link_to t('errors.back_home'), root_path, class: "btn btn-primary" %>
  </div>
</div>
