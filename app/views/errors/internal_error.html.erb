<% content_for(:title) { t('errors.internal_error.title') } %>

<div class="error-page">
  <div class="error-icon error-icon--danger">
    <svg width="120" height="120" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
      <path d="M10.29 3.86L1.82 18a2 2 0 0 0 1.71 3h16.94a2 2 0 0 0 1.71-3L13.71 3.86a2 2 0 0 0-3.42 0z"/>
      <line x1="12" y1="9" x2="12" y2="13"/>
      <line x1="12" y1="17" x2="12.01" y2="17"/>
    </svg>
  </div>

  <h1 class="error-code">500</h1>
  <h2 class="error-title"><%= t('errors.internal_error.title') %></h2>
  <p class="error-message"><%= t('errors.internal_error.message') %></p>

  <div class="error-actions">
    <%= link_to t('errors.back_home'), root_path, class: "btn btn-primary" %>
    <button onclick="location.reload()" class="btn btn-secondary"><%= t('errors.try_again') %></button>
  </div>
</div>
