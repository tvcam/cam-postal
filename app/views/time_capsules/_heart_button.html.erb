<span id="capsule-<%= capsule.id %>-heart">
  <%= form_with url: capsule_heart_path(capsule), method: :post, data: { turbo_frame: "_top" } do %>
    <button type="submit" class="capsule-heart-btn <%= 'hearted' if hearted %>">
      <svg width="16" height="16" viewBox="0 0 24 24" fill="<%= hearted ? 'currentColor' : 'none' %>" stroke="currentColor" stroke-width="2">
        <path d="M20.84 4.61a5.5 5.5 0 0 0-7.78 0L12 5.67l-1.06-1.06a5.5 5.5 0 0 0-7.78 7.78l1.06 1.06L12 21.23l7.78-7.78 1.06-1.06a5.5 5.5 0 0 0 0-7.78z"></path>
      </svg>
      <span class="heart-count"><%= capsule.hearts_count %></span>
    </button>
  <% end %>
</span>
