<h2>Feedback Details</h2>

<div class="feedback-detail">
  <div class="detail-row">
    <label>Date:</label>
    <span><%= @feedback.created_at.strftime("%Y-%m-%d %H:%M:%S") %></span>
  </div>

  <div class="detail-row">
    <label>Name:</label>
    <span><%= @feedback.name.presence || "-" %></span>
  </div>

  <div class="detail-row">
    <label>Email:</label>
    <span>
      <% if @feedback.email.present? %>
        <a href="mailto:<%= @feedback.email %>"><%= @feedback.email %></a>
      <% else %>
        -
      <% end %>
    </span>
  </div>

  <div class="detail-row">
    <label>IP Address:</label>
    <span><%= @feedback.ip_address || "-" %></span>
  </div>

  <div class="detail-row">
    <label>User Agent:</label>
    <span class="user-agent"><%= @feedback.user_agent || "-" %></span>
  </div>

  <div class="message-section">
    <label>Message:</label>
    <div class="message-content">
      <%= simple_format(@feedback.message) %>
    </div>
  </div>

  <div class="actions">
    <% if @feedback.email.present? %>
      <a href="mailto:<%= @feedback.email %>?subject=Re: Your feedback on Cambodia Postal Code" class="btn-small btn-primary">Reply via Email</a>
    <% end %>
    <%= button_to "Delete", admin_feedback_path(@feedback), method: :delete, class: "btn-small btn-danger", data: { turbo_confirm: "Delete this feedback?" } %>
  </div>
</div>

<style>
  .feedback-detail {
    background: var(--card-bg);
    padding: 1.5rem;
    border-radius: 8px;
    border: 1px solid var(--border-color);
    max-width: 800px;
  }
  .detail-row {
    display: flex;
    margin-bottom: 1rem;
    border-bottom: 1px solid var(--border-color);
    padding-bottom: 0.75rem;
  }
  .detail-row label {
    font-weight: 600;
    width: 120px;
    flex-shrink: 0;
  }
  .detail-row span {
    flex: 1;
  }
  .user-agent {
    font-size: 0.85rem;
    color: var(--text-muted);
    word-break: break-all;
  }
  .message-section {
    margin-top: 1.5rem;
  }
  .message-section label {
    display: block;
    font-weight: 600;
    margin-bottom: 0.5rem;
  }
  .message-content {
    background: var(--bg-secondary);
    padding: 1rem;
    border-radius: 6px;
    line-height: 1.6;
    white-space: pre-wrap;
  }
  .actions {
    margin-top: 1.5rem;
    display: flex;
    gap: 10px;
  }
  .btn-small {
    padding: 8px 16px;
    font-size: 0.875rem;
    border-radius: 4px;
    border: none;
    cursor: pointer;
    text-decoration: none;
    display: inline-block;
  }
  .btn-primary {
    background: #3b82f6;
    color: white;
  }
  .btn-danger {
    background: #ef4444;
    color: white;
  }
  .btn-small:hover {
    opacity: 0.8;
  }
</style>
