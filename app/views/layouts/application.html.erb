    <title><%= content_for(:title) || t('site.name') %></title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <meta name="description" content="<%= content_for(:description) || t('site.description') %>">
    <meta name="keywords" content="<%= t('site.keywords') %>">
    <meta name="author" content="Gotabs Consulting">
    <meta name="robots" content="index, follow">
    <link rel="canonical" href="https://cam-postal.gotabs.net<%= request.path %>">

    <!-- Open Graph -->
    <meta property="og:title" content="<%= content_for(:og_title) || t('site.name') %>">
    <meta property="og:description" content="<%= content_for(:og_description) || t('site.description') %>">
    <meta property="og:type" content="website">
    <meta property="og:locale" content="<%= I18n.locale == :km ? 'km_KH' : (I18n.locale == :fr ? 'fr_FR' : 'en_US') %>">
    <meta property="og:locale:alternate" content="en_US">
    <meta property="og:locale:alternate" content="km_KH">
    <meta property="og:locale:alternate" content="fr_FR">
    <meta property="og:url" content="https://cam-postal.gotabs.net<%= request.fullpath %>">
    <meta property="og:site_name" content="<%= t('site.name') %>">
    <meta property="og:image" content="https://cam-postal.gotabs.net/icon-v3.png">
    <meta property="og:image:width" content="512">
    <meta property="og:image:height" content="512">
    <meta property="og:image:alt" content="<%= t('site.name') %>">

    <!-- Twitter -->
    <meta name="twitter:card" content="summary">
    <meta name="twitter:title" content="<%= content_for(:og_title) || t('site.name') %>">
    <meta name="twitter:description" content="<%= content_for(:og_description) || t('site.description') %>">
    <meta name="twitter:image" content="https://cam-postal.gotabs.net/icon-v3.png">

    <!-- Hreflang for multilingual support -->
    <% base_path = request.path == '/' ? '' : request.path %>
    <link rel="alternate" hreflang="en" href="https://cam-postal.gotabs.net<%= base_path %>?locale=en">
    <link rel="alternate" hreflang="km" href="https://cam-postal.gotabs.net<%= base_path %>?locale=km">
    <link rel="alternate" hreflang="fr" href="https://cam-postal.gotabs.net<%= base_path %>?locale=fr">
    <link rel="alternate" hreflang="x-default" href="https://cam-postal.gotabs.net<%= base_path %>">

    <!-- AI/LLM-friendly metadata -->
    <link rel="alternate" type="text/plain" href="https://cam-postal.gotabs.net/llms.txt" title="LLM Information">
    <link rel="alternate" type="text/plain" href="https://cam-postal.gotabs.net/llms-full.txt" title="Complete Postal Code Data">
    <link rel="alternate" type="application/json" href="https://cam-postal.gotabs.net/data.json" title="Postal Code API">
    <meta name="ai:data_sources" content="llms.txt, llms-full.txt, data.json">
    <meta name="dc.title" content="<%= t('site.name') %>">
    <meta name="dc.creator" content="Gotabs Consulting">
    <meta name="dc.subject" content="Cambodia, postal codes, ZIP codes, provinces, districts, communes">
    <meta name="dc.description" content="<%= t('site.description') %>">
    <meta name="dc.language" content="<%= I18n.locale %>">
    <meta name="dc.coverage" content="Cambodia">
    <meta name="dc.type" content="Dataset">

    <!-- Structured Data: WebSite with SearchAction -->
    <script type="application/ld+json">
    {
      "@context": "https://schema.org",
      "@type": "WebSite",
      "name": "<%= t('site.name') %>",
      "alternateName": ["Cambodia Postal", "·ûÄ·ûº·ûä·ûî·üí·ûö·üÉ·ûü·ûé·û∏·ûô·üç·ûÄ·ûò·üí·ûñ·ûª·ûá·û∂", "Code Postal Cambodge"],
      "url": "https://cam-postal.gotabs.net",
      "description": "<%= t('site.description') %>",
      "inLanguage": ["en", "km", "fr"],
      "potentialAction": {
        "@type": "SearchAction",
        "target": {
          "@type": "EntryPoint",
          "urlTemplate": "https://cam-postal.gotabs.net/search?q={search_term_string}"
        },
        "query-input": "required name=search_term_string"
      }
    }
    </script>

    <!-- Structured Data: Organization -->
    <script type="application/ld+json">
    {
      "@context": "https://schema.org",
      "@type": "Organization",
      "name": "Gotabs Consulting",
      "url": "https://gotabs.net",
      "logo": "https://cam-postal.gotabs.net/icon-v3.png"
    }
    </script>

    <!-- Structured Data: WebApplication -->
    <script type="application/ld+json">
    {
      "@context": "https://schema.org",
      "@type": "WebApplication",
      "name": "<%= t('site.name') %>",
      "description": "<%= t('site.description') %>",
      "url": "https://cam-postal.gotabs.net",
      "applicationCategory": "UtilityApplication",
      "operatingSystem": "Any",
      "offers": {
        "@type": "Offer",
        "price": "0",
        "priceCurrency": "USD"
      },
      "author": {
        "@type": "Organization",
        "name": "Gotabs Consulting",
        "url": "https://gotabs.net"
      }
    }
    </script>

    <%= yield :structured_data %>

    <!-- PWA -->
    <meta name="theme-color" content="#1e40af">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="apple-mobile-web-app-status-bar-style" content="black-translucent">
    <meta name="application-name" content="<%= t('site.name') %>">
    <meta name="mobile-web-app-capable" content="yes">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= yield :head %>

    <%= tag.link rel: "manifest", href: pwa_manifest_path(format: :json) %>

    <link rel="icon" href="/icon-v3.png" type="image/png">
    <link rel="apple-touch-icon" href="/icon-v3.png">

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Noto+Sans+Khmer:wght@400;500;600;700&display=swap" rel="stylesheet">

    <%= stylesheet_link_tag :app, "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body>
    <div class="container" data-controller="theme install share language">
      <header class="header">
        <a href="<%= root_path %>" class="logo">
          <img src="/icon-small.png" alt="<%= t('site.name') %>" class="logo-icon" width="56" height="56">
        </a>
        <div class="header-actions">
          <!-- Language Switcher -->
          <div class="language-switcher" data-language-target="menu">
            <button type="button" class="language-btn" data-action="language#toggle" aria-label="<%= t('nav.language') %>">
              <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <circle cx="12" cy="12" r="10"/>
                <line x1="2" y1="12" x2="22" y2="12"/>
                <path d="M12 2a15.3 15.3 0 0 1 4 10 15.3 15.3 0 0 1-4 10 15.3 15.3 0 0 1-4-10 15.3 15.3 0 0 1 4-10z"/>
              </svg>
              <span class="current-lang"><%= I18n.locale.to_s.upcase %></span>
            </button>
            <div class="language-dropdown" data-language-target="dropdown" style="display: none;">
              <%= link_to switch_locale_path(:en), class: "lang-option #{'active' if I18n.locale == :en}" do %>
                <span class="lang-flag">üá∫üá∏</span>
                <span class="lang-name">English</span>
              <% end %>
              <%= link_to switch_locale_path(:km), class: "lang-option #{'active' if I18n.locale == :km}" do %>
                <span class="lang-flag">üá∞üá≠</span>
                <span class="lang-name">·ûÅ·üí·ûò·üÇ·ûö</span>
              <% end %>
              <%= link_to switch_locale_path(:fr), class: "lang-option #{'active' if I18n.locale == :fr}" do %>
                <span class="lang-flag">üá´üá∑</span>
                <span class="lang-name">Fran√ßais</span>
              <% end %>
            </div>
          </div>

          <button type="button" class="share-btn" data-share-target="button" data-action="share#share" aria-label="Share" style="display: none;">
            <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <circle cx="18" cy="5" r="3"/>
              <circle cx="6" cy="12" r="3"/>
              <circle cx="18" cy="19" r="3"/>
              <line x1="8.59" y1="13.51" x2="15.42" y2="17.49"/>
              <line x1="15.41" y1="6.51" x2="8.59" y2="10.49"/>
            </svg>
          </button>
          <button type="button" class="install-btn" data-install-target="button" data-action="install#install" aria-label="Install app" style="display: none;">
            <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4"/>
              <polyline points="7 10 12 15 17 10"/>
              <line x1="12" y1="15" x2="12" y2="3"/>
            </svg>
            Install
          </button>
          <button type="button" class="theme-toggle" data-action="theme#toggle" aria-label="Toggle theme">
            <svg data-theme-target="icon" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M21 12.79A9 9 0 1 1 11.21 3 7 7 0 0 0 21 12.79z"></path>
            </svg>
          </button>
        </div>
      </header>

      <main class="main">
        <%= yield %>
      </main>

      <footer class="footer">
        <div class="stats">
          <span><%= number_with_delimiter(SiteStat.visits) %> <%= t('footer.visits') %></span>
          <span><%= number_with_delimiter(SiteStat.searches) %> <%= t('footer.searches') %></span>
          <span><%= number_with_delimiter(SiteStat.copies) %> <%= t('footer.copies') %></span>
        </div>
        <nav class="footer-nav">
          <%= link_to t('misc.all_provinces'), provinces_path %> |
          <%= link_to t('nav.faq'), faq_path %> |
          <%= link_to t('nav.privacy'), privacy_path %> |
          <%= link_to t('nav.terms'), terms_path %>
        </nav>
        <p><%= t('footer.made_by') %> <a href="https://gotabs.net" target="_blank" rel="noopener">Gotabs Consulting</a></p>
      </footer>
    </div>
  </body>
</html>
